<% if @task.errors.any? %>
    <div class="alert alert-danger" role="alert">
        <%= @task.errors.full_messages.to_sentence %>
    </div>
<% end %>
<%= form_for @task do |f| %>
    <div class="form-group">
        <%= f.label :category_id %>
        <%= f.select :category_id, Category.all.map { |category| [category.name, category.id]} %>
    </div>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name,  class: 'form-control', placeholder: 'Nome da tarefa' %>
    </div>

    <div class="form-group">
        <%= f.label :details %>
        <%= f.text_area :details,  class: 'form-control', placeholder: 'Detalhes da tarefa', rows: 5 %>
    </div>

    <div class="form-group">
        <%= f.label :due_date %>
        <%= f.date_select :due_date,  class: 'form-control', placeholder: 'Detalhes da tarefa', rows: 5 %>
    </div>
    <div class="form-group">
        <%= f.label :done %>
        <%= f.check_box :done %>
    </div>
    <%= f.submit 'Salvar', class: 'btn btn-primary'%>
<% end %>